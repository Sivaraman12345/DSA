{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile and run with input/output redirection",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/c",
        "g++ \"${file}\" -o \"${fileBasenameNoExtension}.exe\" && \"${fileBasenameNoExtension}.exe\" < input.txt > output.txt"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
